<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <h1>Order Details: </h1>

    @using VendorOrderTracker.Models;

    <ol>
      <li><a href='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id'>@Model["order"].OrderTitle</a></li>
      <li><a href='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id'>@Model["order"].Description</a></li>
      <li><a href='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id'>@Model["order"].Price</a></li>
      <li><a href='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id'>@Model["order"].Date</a></li>
    </ol>

    <h3>Vendor: @Model["vendor"].VendorName</h3>

    <a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order.</a>
    <a href='/vendors'>View all vendors.</a>

  </body>
</html>